{
    "env": {
        "browser": true,
        "es2021": true
    },
    "plugins": ["sonarjs"],
    "extends": ["love", "plugin:sonarjs/recommended"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": ["./tsconfig.json"]
    },
    "rules": {
        "@typescript-eslint/semi": ["error", "always"] // Enforce semicolons in TypeScript files
    }
}
